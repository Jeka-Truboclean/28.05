<Window x:Class="_28._05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_28._05"
        mc:Ignorable="d"
        Title="My program ^_^" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter the cost of purchases, separated by commas:"/>
            <TextBox x:Name="inputTextBox" Height="30" Margin="0,10,0,10"/>
            <Button Content="Calculate the amount" Height="30" Click="CalculateSum_Click"/>
            <TextBlock Text="Total amount:" Margin="0,20,0,0"/>
            <TextBox x:Name="resultTextBox" Height="30" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
